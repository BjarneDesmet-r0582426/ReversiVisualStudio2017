<UserControl x:Class="View.Views.EndScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="300" Height="300"> 
    <UserControl.Background>
        <ImageBrush  ImageSource="/images/beach-buildings-clouds-1154498.jpg"  />
    </UserControl.Background>
    <Grid>
        <TextBlock FontSize="30px" HorizontalAlignment="Center" Margin="0,80,0,0" Foreground="White">The winner is </TextBlock>
        <TextBlock Text="{Binding winner}" FontSize="30px" Margin="20,100,0,0" Foreground="White" HorizontalAlignment="Center" />
    </Grid>
</UserControl>
